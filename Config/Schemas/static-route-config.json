{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "static-route-config",
  "$defs": {
    "ipv4-nexthop-type": {
      "type": "object",
      "patternProperties": {
        "^(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])$": {
          "$ref": "#/$defs/nexthop-attributes-type"
        }
      },
      "additionalProperties": false
    },
    "ipv6-nexthop-type": {
      "type": "object",
      "patternProperties": {
        "^(([0-9a-fA-F]{1,4}:){7,7}[0-9a-fA-F]{1,4}|([0-9a-fA-F]{1,4}:){1,7}:|([0-9a-fA-F]{1,4}:){1,6}:[0-9a-fA-F]{1,4}|([0-9a-fA-F]{1,4}:){1,5}(:[0-9a-fA-F]{1,4}){1,2}|([0-9a-fA-F]{1,4}:){1,4}(:[0-9a-fA-F]{1,4}){1,3}|([0-9a-fA-F]{1,4}:){1,3}(:[0-9a-fA-F]{1,4}){1,4}|([0-9a-fA-F]{1,4}:){1,2}(:[0-9a-fA-F]{1,4}){1,5}|[0-9a-fA-F]{1,4}:((:[0-9a-fA-F]{1,4}){1,6})|:((:[0-9a-fA-F]{1,4}){1,7}|:)|fe80:(:[0-9a-fA-F]{0,4}){0,4}%[0-9a-zA-Z]{1,}|::(ffff(:0{1,4}){0,1}:){0,1}((25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9])\\.){3,3}(25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9])|([0-9a-fA-F]{1,4}:){1,4}:((25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9])\\.){3,3}(25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9]))$": {
          "$ref": "#/$defs/nexthop-attributes-type"
        }
      },
      "additionalProperties": false
    },
    "nexthop-attributes-type": {
      "type": "object",
      "properties": {
        "ifname": {
          "$ref": "#/$defs/interface-type"
        },
        "onlink": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "dependencies": {
        "onlink": [ "ifname" ]
      }
    },
    "route-attributes-type": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "next-hop": {
              "oneOf": [
                {
                  "oneOf": [
                    { "$ref": "#/$defs/ipv4-nexthop-type" },
                    { "$ref": "#/$defs/ipv6-nexthop-type" }
                  ]
                },
                { 
                  "$comment": "blackhole - drops traffic; unreachable - makes it unreachable",
                  "type": "string",
                  "enum": [ "blackhole", "unreachable" ]
                }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "ifname": {
              "$ref": "#/$defs/interface-type"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "ipv4-route-type": {
      "type": "object",
      "patternProperties": {
        "^((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])/([0-9]|[1-2][0-9]|3[0-2]))$": {
          "$ref": "#/$defs/route-attributes-type"
        }
      },
      "additionalProperties": false
    },
    "ipv6-route-type": {
      "type": "object",
      "patternProperties": {
        "^(((([0-9a-fA-F]{1,4}:){7,7}[0-9a-fA-F]{1,4}|([0-9a-fA-F]{1,4}:){1,7}:|([0-9a-fA-F]{1,4}:){1,6}:[0-9a-fA-F]{1,4}|([0-9a-fA-F]{1,4}:){1,5}(:[0-9a-fA-F]{1,4}){1,2}|([0-9a-fA-F]{1,4}:){1,4}(:[0-9a-fA-F]{1,4}){1,3}|([0-9a-fA-F]{1,4}:){1,3}(:[0-9a-fA-F]{1,4}){1,4}|([0-9a-fA-F]{1,4}:){1,2}(:[0-9a-fA-F]{1,4}){1,5}|[0-9a-fA-F]{1,4}:((:[0-9a-fA-F]{1,4}){1,6})|:((:[0-9a-fA-F]{1,4}){1,7}|:)|fe80:(:[0-9a-fA-F]{0,4}){0,4}%[0-9a-zA-Z]{1,}|::(ffff(:0{1,4}){0,1}:){0,1}((25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9])\\.){3,3}(25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9])|([0-9a-fA-F]{1,4}:){1,4}:((25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9])\\.){3,3}(25[0-5]|(2[0-4]|1{0,1}[0-9]){0,1}[0-9])))/([0-9]|[0-9][0-9]|1[0-1][0-9]|12[0-8]))$": {
          "$ref": "#/$defs/route-attributes-type"
        }
      },
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "static": {
        "type": "object",
        "properties": {
          "route": {
            "type": "object",
            "properties": {
              "ipv4": {
                "$ref": "#/$defs/ipv4-route-type"
              },
              "ipv6": {
                "$ref": "#/$defs/ipv6-route-type"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false,
        "required": [ "route" ]
    }
  },
  "additionalProperties": false
}
