{
  "$id": "https://birdconfig.com/api/schemas/bgp-community.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BGP Community Schema",
  "description": "BGP Community Schema",
  "$defs": {
    "community-type": {
      "$comment": "Standard numeric community (ASN:number format)",
      "type": "string",
      "pattern": "^([1-9][0-9]{0,3}|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[1-5]):([1-9][0-9]{0,3}|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[1-5])$"
    },
    "community-set-type": {
      "description": "Standard BGP community (RFC 1997)",
      "type": "array",
      "items": {
        "$ref": "#/$defs/community-type"
      },
      "additionalProperties": false,
      "minItems": 1
    },
    "ext-community-type": {
      "$comment": "Extended BGP community in type:ASN:value format",
      "type": "string",
      "pattern": "^(?:[0-9]{1,4}|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5]):(?:[0-9]{1,9}|[1-3][0-9]{9}|4[0-1][0-9]{8}|42[0-8][0-9]{7}|429[0-3][0-9]{6}|4294[0-8][0-9]{5}|42949[0-5][0-9]{4}|429496[0-6][0-9]{3}|4294967[0-2][0-9]{2}|42949672[0-8][0-9]|429496729[0-5]):(?:[0-9]{1,9}|[1-3][0-9]{9}|4[0-1][0-9]{8}|42[0-8][0-9]{7}|429[0-3][0-9]{6}|4294[0-8][0-9]{5}|42949[0-5][0-9]{4}|429496[0-6][0-9]{3}|4294967[0-2][0-9]{2}|42949672[0-8][0-9]|429496729[0-5])$"

    },
    "ext-community-set-type": {
      "description": "Extended BGP community (RFC 4360)",
      "type": "array",
      "items": {
        "$ref": "#/$defs/ext-community-type"
      },
      "additionalProperties": false,
      "minItems": 1
    },
    "large-community-type": {
      "$comment": "Large BGP community in ASN:local1:local2 format",
      "type": "string",
      "pattern": "^(?:[0-9]{1,9}|[1-3][0-9]{9}|4[0-1][0-9]{8}|42[0-8][0-9]{7}|429[0-3][0-9]{6}|4294[0-8][0-9]{5}|42949[0-5][0-9]{4}|429496[0-6][0-9]{3}|4294967[0-2][0-9]{2}|42949672[0-8][0-9]|429496729[0-5]):(?:[0-9]{1,9}|[1-3][0-9]{9}|4[0-1][0-9]{8}|42[0-8][0-9]{7}|429[0-3][0-9]{6}|4294[0-8][0-9]{5}|42949[0-5][0-9]{4}|429496[0-6][0-9]{3}|4294967[0-2][0-9]{2}|42949672[0-8][0-9]|429496729[0-5]):(?:[0-9]{1,9}|[1-3][0-9]{9}|4[0-1][0-9]{8}|42[0-8][0-9]{7}|429[0-3][0-9]{6}|4294[0-8][0-9]{5}|42949[0-5][0-9]{4}|429496[0-6][0-9]{3}|4294967[0-2][0-9]{2}|42949672[0-8][0-9]|429496729[0-5])$"
    },
    "large-community-set-type": {
      "description": "Large BGP community (RFC 8092)",
      "type": "array",
      "items": {
        "$ref": "#/$defs/large-community-type"
      },
      "additionalProperties": false,
      "minItems": 1
    }
  }
}
